<%= devise_error_messages! :class => 'acenter' %>
<div class="container-fluid registration">
  <div class="row-fluid">
    <div class="span4"></div>
      <div class="span4 well-white">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <legend>Change your password</legend>
          <%= f.hidden_field :reset_password_token %>
          <div class="control-group">
            <div class="controls"> 
              <%= f.label :password, "New password" %>
              <%= f.password_field :password, class:"span12" %>
            </div>
          </div>
          <div class="control-group">
            <div class="controls"> 
              <%= f.label :password_confirmation, "Confirm new password" %>
              <%= f.password_field :password_confirmation, class:"span12" %>
            </div>
          </div>
          <div class="control-group">
            <div class="controls"> 
              <button type="submit" class="btn">Change my password</button>
            </div>
          </div>
  
        <% end %>

      </div>
    <div class="span4"></div>
  </div>
</div>
