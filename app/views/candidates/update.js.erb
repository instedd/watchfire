var form_container = $('#candidate_paused_form_<%= candidate.id %>');
form_container.html('<%= escape_javascript(render :partial => 'shared/candidate_paused_form', :locals => {:candidate => candidate} )%>');
var container = form_container.parents('tr.candidate');
container.toggleClass('blocked');
$('.mobile,.gmobile', container).each(function(){
	var new_class = '<%= candidate.active ? "mobile" : "gmobile"%>';
	$(this).attr('class', new_class);
});
$('.phone,.gphone', container).each(function(){
	var new_class = '<%= candidate.active ? "phone" : "gphone"%>';
	$(this).attr('class', new_class);
});
$('#edit_candidate_<%= candidate.id %> input:checkbox').click(function() {
	$(this).parent().submit();
});