.btns
	- if mission.candidate_count('pending') > 0
		#call_button_canvas.btn
			- if mission.status_created?
				= button_to 'Start Recruiting', start_mission_path(@mission), :remote => true
			- if mission.status_running?
				= button_to 'Stop Recruiting', stop_mission_path(@mission), :remote => true
			- if mission.status_paused? || mission.status_finished?
				= button_to 'Resume Recruiting', start_mission_path(@mission), :remote => true
	- if !mission.status_created?
		.btn
			= button_to 'New mission', mission, :confirm => 'Abandon current mission and start a new one?', :method => :delete
#volunteers{'data-refresh-url' => (refresh_mission_path(@mission) rescue nil)}
	%table
		- mission.candidates.each do |c|
			%tr{:class => ('candidate candidate-'+c.status.to_s), 'data-lat' => c.volunteer.lat, 'data-lng' => c.volunteer.lng, 'data-url' => volunteer_path(c.volunteer)}
				%td= c.status
				%td= c.volunteer.name
				%td= c.volunteer.voice_number
				%td= c.volunteer.sms_number
#status
	%table
		%tr
			%td Confirmed
			%td= mission.candidate_count('confirmed')
		%tr
			%td Pending
			%td= mission.candidate_count('pending')
		%tr
			%td Denied
			%td= mission.candidate_count('denied')
		%tr
			%td Unresponsive
			%td= mission.candidate_count('unresponsive')
