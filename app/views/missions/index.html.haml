- content_for :head do
	= javascript_include_tag 'http://maps.googleapis.com/maps/api/js?sensor=false'

#left-panel
	= form_for @mission do |f|
		%p
			= f.label :req_vols, 'Recruit'
			= f.text_field :req_vols
		%p
			= f.label :reason
			= f.text_field :reason
		%p
			= f.label :address, 'Location'		
			= f.text_field :address
		#map_canvas
			here goes the map!
		%p
			= f.label :lat
			= f.text_field :lat
		%p
			= f.label :lng
			= f.text_field :lng
#right-panel
	%p 
		Calling List
		%button Start Recruiting
	#volunteers
		%ul
			%li John Doe
			%li Ariel Gomez
			%li Peter Smith
	#status
		%ul
			%li Confirmed 1
			%li Denied 2
			%li Pending 3
			%li Unresponsive 4

